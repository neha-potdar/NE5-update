<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="page-title mb-0 font-size-18">Inbox</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
                    <li class="breadcrumb-item active">Inbox</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>



</div>
<!-- End row -->

<!-- Modal -->
<div class="modal fade" id="composemodal" tabindex="-1" role="dialog"
    aria-labelledby="composemodalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="composemodalTitle">New Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="To">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Subject">
                    </div>
                    <div class="mb-3">
                        <form method="post">
                            <textarea id="email-editor" name="area"></textarea>
                        </form>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send <i
                        class="fab fa-telegram-plane ms-1"></i></button>
            </div>
        </div>
    </div>
</div>
<!-- ./Transactions/transactions.ejs -->
<!-- ./Transactions/transactions.ejs -->
<!-- ./Transactions/transactions.ejs -->
<!-- ./Transactions/transactions.ejs -->
<!-- ./Transactions/transactions.ejs -->
<!-- ./Transactions/transactions.ejs -->
<div class="table-responsive">
    <table class="table table-centered mb-0" id="myTable">
      <thead>
        <tr>
          <th scope="col">Transaction id</th>
          <th scope="col">Price</th>
          <th scope="col">Type</th>
          <th scope="col">Credit/Debit</th>
          <th scope="col" colspan="2">Narration</th>
          <th scope="col">Account Type</th>
          <th scope="col">Time</th>
          <th scope="col">Api Name</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach((item) => { %>
          <tr>
            <td><%= item.transaction_id %></td>
            <td>$ <%= item.price %></td>
            <td><%= item.type %></td>
            <td><%= item.credit_debit %></td>
            <td colspan="2"><%= item.narration %></td>
            <td><%= item.account_type %></td>
            <td><%= item.transaction_time %></td>
            <td><%= item.api_name %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <ul class="pagination pagination-rounded justify-content-center mb-0">
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= currentPage - 1 %>">Previous</a>
        </li>
      <% } %>

      <% if (totalPages <= 10) { %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      <% } else { %>
        <% if (currentPage <= 5) { %>
          <% for (let i = 1; i <= 10; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        <% } else if (currentPage > 5 && currentPage <= totalPages - 5) { %>
          <% for (let i = currentPage - 4; i <= currentPage + 5; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        <% } else { %>
          <% for (let i = totalPages - 9; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        <% } %>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="/custom-query?fromDate=<%= fromDate %>&toDate=<%= toDate %>&apiName=<%= apiName %>&page=<%= currentPage + 1 %>">Next</a>
        </li>
      <% } %>
    </ul>
  </div>
</div>
</div>






  

<%- contentFor('FooterJs') %>

<!--tinymce js-->
<script src="public/assets/libs/tinymce/tinymce.min.js"></script>

